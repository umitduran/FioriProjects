<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<f:SimpleForm id="idMalzemeForm"
	              editable="true" 
	              layout="ResponsiveGridLayout" 
	              labelSpanL="4" 
	              labelSpanM="4" 
	              labelSpanS="12"
				  columnsL="1"
				  columnsM="2">
		<core:Title text="{i18n>MalzemeVeIlgiliDokumanlarTitle}" />
		<Label id="idMalzemeLabel" text="{i18n>MalzemeLabel}"/>
		<Input id="idMalzeme" value="{/Malzeme}">
			<layoutData>
				<l:GridData span="L3 M8 S12"/>
			</layoutData>
		</Input>
		<core:Title text="" />
	<Table id="idIlgiliDokumanlarTable" >
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>IlgiliDokumanlarListTitle}" level="H2"/>
			</Toolbar>
		</headerToolbar>	
		<columns>
			<Column width="24em">
				<Text text="{i18n>ColumnDokumanName}" />
			</Column>			
			<Column hAlign="Right">
				<Text text="{i18n>ColumnDokumanTuru}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>		
					<UploadCollection 
						id="idIlgiliDokumanlar"
						multiple="false"
						sameFilenameAllowed="true"
						showSeparators="All"
						change="onIlgiliDokumanlarUploadChange"
						fileDeleted="onIlgiliDokumanDeleted"
						uploadComplete="onIlgiliDokumanlarUploadComplete"
						numberOfAttachmentsText=" "
						uploadUrl="/logo~ui~talep/UploadServlet"
						noDataText=" "
						items="{/MaterialDocuments}">
						<items>
							<UploadCollectionItem
								fileName="{FileName}"
								documentId="{DocumentId}"
								url="/logo~ui~talep/DownloadServlet?id={DocumentId}&amp;filename={FileName}"
								visibleEdit="false">
			
									
							<ComboBox id="idDokumanTurleri"
					        		  items="{sabit>/DokumanTurleri}">
								<core:Item key="{sabit>key}" text="{sabit>value}" />
							        <layoutData>
							          <l:GridData span="L3 M3 S12"/>
							        </layoutData>				        							
							</ComboBox>	
			
							</UploadCollectionItem>
						</items>
						<layoutData>
							<l:GridData span="L6 M6 S12"/>
						</layoutData>
					</UploadCollection>


				</cells>
			</ColumnListItem>
		</items>
		
		
		
		
	</Table>
		
		
		
		
		
		
		
		
		
		

	</f:SimpleForm>

</core:FragmentDefinition>