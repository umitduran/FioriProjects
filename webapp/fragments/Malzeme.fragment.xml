<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<f:SimpleForm id="idMalzemeForm"
	              editable="true" 
	              layout="ResponsiveGridLayout" 
	              labelSpanL="4" 
	              labelSpanM="4" 
	              labelSpanS="12"
				  columnsL="1"
				  columnsM="2">
		<core:Title text="{i18n>MalzemeVeIlgiliDokumanlarTitle}" />
		<Label id="idMalzemeLabel" text="{i18n>MalzemeLabel}"/>
		<Input id="idMalzeme" value="{/Malzeme}">
			<layoutData>
				<l:GridData span="L3 M8 S12"/>
			</layoutData>
		</Input>
		<core:Title text="" />
	<Table id="idIlgiliDokumanlarTable" items="{/MaterialDocuments}">
		<headerToolbar>
			<Toolbar>
				<Title text="{i18n>IlgiliDokumanlarListTitle}" level="H2"/>
			</Toolbar>
		</headerToolbar>	
		<columns>
			<Column width="24em">
				<Text text="{i18n>ColumnDokumanName}" />
			</Column>			
			<Column hAlign="Right">
				<Text text="{i18n>ColumnDokumanTuru}" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>		
					<ObjectIdentifier title="{FileName}" />	
					<ComboBox id="idDokumanTurleri"
			        		  items="{sabit>/DokumanTurleri}"
			        		  selectionChange="onDokumantTuruChanged">
						<core:Item key="{sabit>key}" text="{sabit>value}" />
					        <layoutData>
					          <l:GridData span="L3 M3 S12"/>
					        </layoutData>				        							
					</ComboBox>	

				</cells>
			</ColumnListItem>
		</items>
		
		
		
		
	</Table>
		
		
		
		
		
		
		
		
		
		

	</f:SimpleForm>

</core:FragmentDefinition>