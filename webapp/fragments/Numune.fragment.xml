<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<f:SimpleForm id="idNumuneForm"
	              editable="true" 
	              layout="ResponsiveGridLayout" 
	              labelSpanL="4" 
	              labelSpanM="4" 
	              labelSpanS="12"
				  columnsL="2"
				  columnsM="2">
		
		<Label id="idNumuneLabel" text="{i18n>NumuneLabel}"/>
		<Input id="idNumune" value="{/Numune}" maxLength="20">
			<layoutData>
				<l:GridData span="L3 M2 S12"/>
			</layoutData>
		</Input>
		<Label id="idNumuneGeldiLabel" text="{i18n>NumuneGeldiLabel}"/>
		<CheckBox id="idNumuneGeldi" selected="false" />
		<Label id="idVarisNoktasiLabel" text="{i18n>VarisNoktasiLabel}"/>
		<Input id="idVarisNoktasi" value="{/VarisNoktasi}">
			<layoutData>
				<l:GridData span="L3 M2 S12"/>
			</layoutData>
		</Input>
		
	</f:SimpleForm>

</core:FragmentDefinition>