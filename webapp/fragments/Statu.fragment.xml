<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	
	<f:SimpleForm id="idStatuForm"
	              editable="true" 
	              layout="ResponsiveGridLayout" 
	              labelSpanL="4" 
	              labelSpanM="4" 
	              labelSpanS="12">
		
		<Label id="idSonKullaniciLabel" text="{i18n>SonKullaniciLabel}"/>
		<Input id="idSonKullanici" value="{/SonKullanici}" >
			<layoutData>
	          <l:GridData span="L4 M2 S12"/>
	        </layoutData>
		</Input>
		<Label id="idTalepNumarasiLabel" text="{i18n>TalepNumarasiLabel}"/>		
		<Input id="idTalepNumarasi" value="{/TalepNumarasi}" >
			<layoutData>
	          <l:GridData span="L4 M2 S12"/>
	        </layoutData>
		</Input>
		<Label id="idIslemTarihiLabel" text="{i18n>IslemTarihiLabel}"/>		
		<Input id="idIslemTarihi" value="{/IslemTarihi}" >
			<layoutData>
	          <l:GridData span="L4 M2 S12"/>
	        </layoutData>
		</Input>
		<Label id="idStatuLabel" text="{i18n>StatuLabel}"/>		
		<Input id="idStatu" value="{/Statu}" >
			<layoutData>
	          <l:GridData span="L4 M2 S12"/>
	        </layoutData>
		</Input>	
		
	</f:SimpleForm>

</core:FragmentDefinition>