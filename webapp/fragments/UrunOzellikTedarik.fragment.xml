<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
	
	<f:SimpleForm editable="true" 
				id="idUrunOzellikTedarikForm"
				layout="ResponsiveGridLayout" 
				labelSpanL="4" 
				labelSpanM="6" 
				labelSpanS="12"
				columnsL="2"
				columnsM="2">
		<core:Title text="{i18n>UrunOzellikTitle}" />
		<Label id="idUrunOzellikleriTedarikLabel" text="{i18n>UrunOzellikLabel}" required="true"/>
		<TextArea id="idUrunOzellikleriTedarik" rows="12" value="{tedarik>/UrunOzellikleri}" maxLength="2000">
		</TextArea>
		
		<Label text="{i18n>OzelDurumLabel}"/>
		<Input id="idOzelDurumTedarik" value="{tedarik>/OzelDurumTedarik}" maxLength="100"/>
		
		<core:Title text="{i18n>GorselUploadTitle}" />
		<u:FileUploader
			id="idGorselUploadTedarik"
			uploadUrl=""
			width="400px"
			uploadComplete="onGorselUploadCompleteTedarik"
			change="onGorselUploadChangeTedarik"
			useMultipart="false"
			style="Emphasized"
			placeholder="{i18n>GorselUploadText}">
			<u:layoutData>
				<l:GridData span="L12 M12 S12"/>
			</u:layoutData>
			<u:headerParameters>
				<u:FileUploaderParameter
					name="headerParam1"
					value="Foo"/>
				<u:FileUploaderParameter
					name="headerParam2"
					value="bar"/>
			</u:headerParameters>			
		</u:FileUploader>
		<Image
			id="idGorselImageTedarik"
			height="250px"
			densityAware="false"
			decorative="false"/>
	</f:SimpleForm>

</core:FragmentDefinition>