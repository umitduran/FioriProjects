<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
	
	<f:SimpleForm editable="true" 
				layout="ResponsiveGridLayout" 
				id="idYorumlarForm"
				labelSpanL="4" 
				labelSpanM="6" 
				labelSpanS="12"
				columnsL="1"
				columnsM="1">
		<core:Title text="{i18n>YorumlarTitle}" />
	 	<TextArea id="idComment"  value="{/Yorum}" width="100%" maxLength="200" rows="5" liveChange="remainLetter">
			<layoutData>
				<l:GridData span="L12 M12 S12"/>
			</layoutData>
	 	</TextArea>
	 	<Text id="idCountLetter" text="/200" textAlign="Right">
			<layoutData>
				<l:GridData span="L12 M4 S8"/>
			</layoutData>
	 	</Text>
		<Table items="{/Yorumlar}">
			<layoutData>
				<l:GridData span="L12 M12 S12"/>
			</layoutData>
			<columns>
	            <Column width="3em">
	                <Text text=""/>
	            </Column>
				<Column width="10em">
					<Text text="{i18n>CommentTableKullaniciAdi}" />
				</Column>			
				<Column width="15em">
					<Text text="{i18n>CommentTableStatuText}" />
				</Column>			
				<Column width="8em">
					<Text text="{i18n>CommentTableYorumTarihi}" />
				</Column>			
				<Column width="8em">
					<Text text="{i18n>CommentTableYorumSaati}" />
				</Column>			
				<Column>
					<Text text="{i18n>CommentTableYorum}" />
				</Column>			
			</columns>
			<items>
				<ColumnListItem>
					<cells>			
						<core:Icon src="sap-icon://comment"/>					
						<Text text ="{KullaniciAdi}" />	
						<Text text="{StatuText}" />
						<Text text="{YorumTarihi}" />
						<Text text="{
							path: 'YorumSaati',
							type: 'sap.ui.model.odata.type.Time'}" />

					 	<TextArea value="{Yorum}" growing="true" tooltip="{Yorum}" editable="false" width="100%" rows="1" />
					</cells>
				</ColumnListItem>
			</items>
		</Table>	 	
	</f:SimpleForm>

</core:FragmentDefinition>